extends ../layout

block content
    h1= login
    pre
     .userInfo= 'ID: ' + login
     .userInfo= 'Pass: ' + pass

    - if (own)
        .userPanel You are logged in
        ul
         li
            a.userBtn(href="./#{login}/edit") Edit Profile
         li
            a.userBtn#signOutBtn(href="/signout") Sign Out
