extends ../layout
block content
    h3= blog.title

    - text = blog.content
    - text = text.replace( /\r\n|\r|\n/g, '<br/>' )
    //- htmlText = $('<div><span id='box'>Hi, I am a span box</span></div>')

    .help-block(style="font-size: 11px;") Author:&nbsp
      a(href="/user/#{author.name}") #{author.name}
      | &nbsp|
      | Date: #{blog.date}
    article !{text}

    if (author.name == userauth.name)
      p
        .btn-group
          a.help-block.btn.btn-default.btn-sm(href="./#{blog._id}/delete") Delete
          a.help-block.btn.btn-default.btn-sm(href="./#{blog._id}/edit") Edit

    if comments
      pre
        each comment in comments
            p= comment.author + ' - ' + comment.content

    form(method="post")
        textarea.form-control(rows=5, name="comment_content", placeholder="What do you think about it?")
        pre
          input.btn.btn-primary(type="submit", value="Add comment")